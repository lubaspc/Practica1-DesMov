<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Menu"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/colorPrimary"
        >


    <TextView
            android:text="@string/menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="60sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:id="@+id/TMenu"
            android:textAlignment="center"
            android:layout_margin="30dp"
            />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BImagenes"
            android:layout_margin="30dp"
            android:background="@android:drawable/ic_menu_gallery"
            />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BCamara"
            android:layout_margin="30dp" android:background="@android:drawable/ic_menu_camera"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BInternet"
            android:layout_margin="30dp" android:background="@android:drawable/ic_menu_search"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BGps"
            android:layout_margin="30dp" android:background="@android:drawable/ic_menu_mapmode"/>
</LinearLayout>